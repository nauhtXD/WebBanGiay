@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{   
    <form class="was-validated">
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="uname" placeholder="3TRoyal@example.com" name="email" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="form-group">
            <label for="dienthoai">Số điện thoại</label>
            <input type="text" class="form-control" id="dt" placeholder="000.0000.000" name="dienthoai" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="form-group">
            <label for="diachi">Địa chỉ</label>
            <textarea class="form-control" id="dc" rows="3" name="diachi" required></textarea>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <input type="submit" class="btn btn-info" value="Xác nhận">
    </form>
}

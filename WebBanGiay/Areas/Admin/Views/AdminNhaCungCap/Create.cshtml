@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{      
    <div class="row">
        <div class="col-lg-9">
            <table class="table">
                <thead>
                    <td colspan="2">
                        <h2>THÊM NHÀ CUNG CẤP MỚI</h2>
                    </td>
                </thead>
                <tr>
                    <td>Mã Nhà Cung Cấp
                    </td>
                    <td>
                        @Html.TextBox("MaNCC")
                        @ViewData["Loi"]
                    </td>
                </tr>
                <tr>
                    <td>Tên Nhà Cung Cấp
                    </td>
                    <td>
                        @Html.TextBox("TenNCC")
                        @ViewData["Loi1"]
                    </td>
                </tr>
                <tr>
                    <td>Địa Chỉ
                    </td>
                    <td>
                        @Html.TextBox("DiaChi")
                        @ViewData["Loi2"]
                    </td>
                </tr>
                <tr>
                    <td>Điện thoại
                    </td>
                    <td>
                        @Html.TextBox("DienThoai")
                        @ViewData["Loi3"]
                    </td>
                </tr>
                <tr>
                    <td>
                        <button class="btn btn-outline-info">
                            @Html.ActionLink("Quay lại Danh Sách", "Index")
                        </button>
                    </td>
                    <td>
                        <input class="btn btn-outline-info" type="submit" value="Save" />
                    </td>
                </tr>
            </table>
        </div>

    </div>
 
}

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

@model WebBanGiay.Models.SanPham
@using (Html.BeginForm())
{      
    <div class="row">
        <div class="col-lg-3">
            <img class="img-thumbnail" src="/Content/images/product/@Model.AnhBia" alt="@Model.TenSP" />
            @Html.TextBoxFor(m => m.AnhBia)
        </div>
        <div class="col-lg-9">
            <table class="table">
                <thead>
                    <td colspan="2">
                        <h2>THÔNG TIN CHI TIẾT SẢN PHẨM</h2>
                    </td>
                </thead>
                <tr>
                    <td>Mã Sản Phẩm
                    </td>
                    <td>
                        <fieldset disabled>
                            <div>
                                @Html.TextBoxFor(m => m.MaSP)
                                @ViewData["Loi"]
                            </div>
                        </fieldset>
                    </td>
                </tr>
                <tr>
                    <td>Tên Sản Phẩm
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.TenSP)
                        @ViewData["Loi1"]
                    </td>
                </tr>
                <tr>
                    <td>Màu Sản Phẩm
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Mau)
                        @ViewData["Loi2"]
                    </td>
                </tr>
                <tr>
                    <td>Size Sản Phẩm
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Size)
                        @ViewData["Loi3"]
                    </td>
                </tr>
                <tr>
                    <td>Nhà Cung Cấp
                    </td>
                    <td>
                        @Html.DropDownList("MaNCC")
                    </td>
                </tr>
                <tr>
                    <td>Đánh giá của sản phẩm
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.DanhGia) <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star-halt-alt"></i>
                        @ViewData["Loi6"]
                    </td>
                </tr>
                <tr>
                    <td>Mô Tả Sản Phẩm
                    </td>
                    <td>
                        @Html.TextAreaFor(m => m.MoTa)
                        @ViewData["Loi5"]
                    </td>
                </tr>
                <tr>
                    <td>Giá Sản Phẩm
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Gia)
                        @ViewData["Loi7"]
                    </td>
                </tr>
                <tr>
                    <td>Tình Trạng
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.TinhTrang)
                        @ViewData["Loi8"]
                    </td>
                </tr>
                <tr>
                    <td>Phân Loại
                    </td>
                    <td>
                        @Html.DropDownList("MaLoai")
                    </td>
                </tr>
                <tr>
                    <td>
                        <button class="btn btn-outline-info">
                            @Html.ActionLink("Quay lại Danh Sách", "Index")
                        </button>
                    </td>
                    <td>
                        <input class="btn btn-outline-info" type="submit" value="Save" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
}

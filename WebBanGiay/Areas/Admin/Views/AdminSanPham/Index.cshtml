@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<html>
<body>
    <div id="btn_group" class="row">
        <div class="col-lg-5 col-md-5 col-sm-5 row">
            <div class="col-lg-3 col-md-3 col-sm-3">
                <h5 style="color: #969696"><b>Tìm Kiếm</b></h5>
            </div>
            @using (Html.BeginForm("Index", "AdminSanPham", FormMethod.Get)) // -- phần thay đổi
            {
                <div class="col-lg-9 col-md-9 col-sm-9">
                    <form id="demo-2">
                        <input type="search" placeholder="Search" name="btnSearch">
                    </form>
                </div>
            }
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3">
            <h4 id="Title_View">DANH MỤC SẢN PHẨM</h4>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
            <button class="btn btn-success" id="btn" style="float: right; color: lawngreen">
                <i class="fa fa-plus-circle"></i><a href="@Url.Action("Create", "AdminSanPham")" style="color: lawngreen">&nbsp Thêm mới</a>
            </button>
        </div>
    </div>
    <hr width="100%" size="5px" align="center" />
    <div class="row" id="Khung_View" style="background-color: lavender; border-radius: 20px">
        <table class="table col-lg-12 col-md-12 col-sm-12">
            <thead class="thead-dark">
                <tr>
                    <th>Mã SP
                    </th>
                    <th>Tên SP
                    </th>
                    <th>Màu
                    </th>
                    <th>Size
                    </th>
                    <th>Nhà Cung Cấp
                    </th>
                    <th>Giá
                    </th>
                    <th>Tình Trạng
                    </th>
                    <th>Ảnh Bìa
                    </th>
                    <th>Tác vụ
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.MaSP
                    </td>
                    <td>
                        @item.TenSP
                    </td>
                    <td>
                        @item.Mau
                    </td>
                    <td>
                        @item.Size
                    </td>
                    <td>
                        @item.MaNCC
                    </td>
                    <td>
                        @item.Gia
                    </td>
                    <td>
                        @item.TinhTrang
                    </td>
                    <td>
                        <img alt="@item.TenSP" src="/Content/images/product/@item.AnhBia" height="150px" width="150px" class="rounded"/>
                    </td>
                    <td>
                        <span>
                            <a href ="@Url.Action("Details", "AdminSanPham", new { id = item.MaSP })"><i class="fa fa-info-circle"></i></a>&nbsp 
                            <a href ="@Url.Action("Edit", "AdminSanPham", new { id = item.MaSP })"><i class="fa fa-edit"></i></a>&nbsp 
                            <a href ="@Url.Action("Delete", "AdminSanPham", new { id = item.MaSP })"><i class="fa fa-trash-alt"></i></a>
                        </span>
                    </td>
                </tr>
            }
        </table>
    </div>

</body>
</html>

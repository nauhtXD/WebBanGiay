@using WebBanGiay.Models
@model List<GioHang>
@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12 ftco-animate">
            <div class="cart-list">
                <table class="table">
                    <thead class="thead-primary">
                        <tr class="text-center">
                            <th>&nbsp;</th>
                            <th>Ảnh</th>
                            <th>Tên</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td class="product-remove"><a href="@Url.Action("XoaGioHang", "GioHang", new { @iMaSP = item.iMaSP })"><span class="fas fa-times"></span></a></td>
                                <td class="image-prod">
                                    <div class="img" style="background-image: url(/Content/images/product/@item.sAnhBia);"></div>
                                </td>
                                <td class="product-name">
                                    <h3>@item.sTenSP</h3>
                                </td>
                                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.iMaSP }))
                                {
                                    <td class="price">@String.Format("{0:0,0}", item.dGia) VNĐ</td>
                                    <td class="quantity">
                                        <div class="input-group mb-3">
                                            <input type="text" name="txtSoLuong" class="quantity form-control input-number" value="@item.iSoLuong" min="1" max="100">
                                        </div>
                                    </td>
                                    <td class="total">@String.Format("{0:0,0}", item.dThanhTien) VNĐ</td>
                                    <td>
                                        <div class="card_area d-flex align-items-center">
                                            <input type="submit" value="Cập nhật" class="primary-btn">
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row justify-content-end">
        <div class="col col-lg-5 col-md-6 mt-5 cart-wrap ftco-animate">
            <div class="cart-total mb-3">
                <h3>Giỏ hàng</h3>
                <p class="d-flex">
                    <span>Tổng tiền hàng</span>
                    <span>@String.Format("{0:0,0}", @ViewBag.TongTien) VNĐ</span>
                </p>
                <p class="d-flex">
                    <span>Số lượng giày có trong giỏ</span>
                    <span>@ViewBag.TongSoLuong</span>
                </p>
                <p class="d-flex">
                    <span>Giảm giá</span>
                    <span>0 VNĐ</span>
                </p>
                <hr>
                <p class="d-flex total-price">
                    <span>Tổng thành tiền</span>
                    <span>@String.Format("{0:0,0}", @ViewBag.TongTien) VNĐ</span>
                </p>
            </div>
            <p class="text-center"><a href="@Url.Action("DatHang", "GioHang")" class="btn primary-btn py-3 px-4">Xác nhận mua hàng</a></p>
        </div>
    </div>
</div>


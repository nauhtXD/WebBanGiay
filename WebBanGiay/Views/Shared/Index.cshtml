@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div id="wrapperLogin">
    <div class="clear"></div>
    @using (Html.BeginForm())
    { 
        @Html.ValidationSummary(true)
        <div class="container">
            <div class="d-flex justify-content-center h-100">
                <div class="card">
                    <div class="card-header">
                        <h3>Đăng nhập</h3>
                        <div class="d-flex justify-content-end social_icon">
                            <span><i class="fab fa-facebook-square"></i></span>
                            <span><i class="fab fa-google-plus-square"></i></span>
                            <span><i class="fab fa-twitter-square"></i></span>
                        </div>
                    </div>
                    <div class="card-body">

                        <form>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input type="text" class="form-control" placeholder="username" name="TenDN">
                                @ViewData["Loi1"]
                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                </div>
                                <input type="password" class="form-control" placeholder="password" name="MatKhau">
                                @ViewData["Loi2"]
                            </div>
                            <div class="row align-items-center remember">
                                <input type="checkbox">Ghi nhớ
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Đăng nhập" class="btn float-right login_btn">
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-center links">
                            Chưa có tài khoản?<a href="@Url.Action("DangKy", "DangNhap")">Đăng ký</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="clear"></div>
</div>